#!/bin/bash
set -e

HERE=$(dirname "$(readlink --canonicalize "$BASH_SOURCE")")
. "$HERE/_env"

m 'test...'
"$HERE/test"
m 'build-library...'
"$HERE/build-library"
m 'build-csars...'
"$HERE/build-csars"

export NOBUILD=true

m 'test-formats...'
"$HERE/test-formats"
m 'test-js...'
"$HERE/test-js"
m 'test-https...'
"$HERE/test-https"
m 'test-csar...'
"$HERE/test-csar"
m 'test-csar-http...'
"$HERE/test-csar-http"
m 'test-archive-url...'
"$HERE/test-archive-url"
m 'test-archive-url-http...'
"$HERE/test-archive-url-http"
m 'test-git...'
"$HERE/test-git"
m 'test-wasm...'
"$HERE/test-wasm"
m 'test-java...'
"$HERE/test-java"
m 'test-python...'
"$HERE/test-python"
m 'test-ruby...'
"$HERE/test-ruby"

m done!

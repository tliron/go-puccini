#!/bin/bash
set -e

if [ "$NOBUILD" == true ]; then
	exit
fi

HERE=$(dirname "$(readlink --canonicalize "$BASH_SOURCE")")
. "$HERE/_env"

git_version

function build () {
	local TOOL=$1
	pushd "$ROOT/executables/$TOOL" > /dev/null
	CGO_ENABLED=0 go install \
		-ldflags " \
			-X 'github.com/tliron/go-kutil/version.GitVersion=$VERSION' \
			-X 'github.com/tliron/go-kutil/version.GitRevision=$REVISION' \
			-X 'github.com/tliron/go-kutil/version.Timestamp=$TIMESTAMP'"
	if [ -f default.pgo ]; then
		m "built ${GOPATH//\\/\\\\}/bin/$TOOL (pgo)"
	else
		m "built ${GOPATH//\\/\\\\}/bin/$TOOL"
	fi
	popd > /dev/null
}

build puccini-tosca
build puccini-clout
build puccini-csar
